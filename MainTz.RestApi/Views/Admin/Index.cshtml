@using MainTz.RestApi.DAL.Data.Models.DtoModels
@model IEnumerable<UserDto>

<div class="row bg-light admin-page">
    <div class="col-9">
		<div class="row">
			@foreach (var user in Model)
			{
				<div class="col-4">@user.Name</div>
				<div class="col-4">@user.Password</div>
				<div class="col-4">@user.Role</div>
			}
		</div>
    </div>

    <div class="col-3">
		<div class="row user-commands-form py-2">
			<form method="post" asp-area="" asp-controller="Admin" asp-action="CreateUser">
				<div class="d-flex align-items-center">
					<label class="mx-1">Id:</label>
					<input class="w-100 my-1" type="text" name="Id" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Бренд:</label>
					<input class="w-100 my-1" type="text" name="Brand" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Модель: </label>
					<input class="w-100 my-1" type="text" name="Model" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Цвет: </label>
					<input class="w-100 my-1" type="text" name="Color" /><br />
				</div>

				<input class="btn btn-success w-100" type="submit" value="Добавить пользователя" />
			</form>
		</div>

		<div class="row user-commands-form py-2">
			<form method="post" asp-area="" asp-controller="Admin" asp-action="DeleteUser">
				<div class="d-flex align-items-center">
					<label class="mx-1">Id:</label> 
					<input class="w-100 my-1" type="text" name="Id" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Бренд:</label> 
					<input class="w-100 my-1" type="text" name="Brand" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Модель: </label> 
					<input class="w-100 my-1" type="text" name="Model" /><br />
				</div>
				<div class="d-flex align-items-center">
					<label class="mx-1">Цвет: </label> 
					<input class="w-100 my-1" type="text" name="Color" /><br />
				</div>

				<input class="btn btn-danger w-100" type="submit" value="Удалить пользователя" />
			</form>
		</div>
    </div>
</div>