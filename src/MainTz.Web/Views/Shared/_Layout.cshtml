<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("HeadPartial")
</head>
<body>
    <header>
        @await Html.PartialAsync("HeaderPartial")
    </header>

    @await Html.PartialAsync("ScriptsPartial")

    <main role="main" class="container-fluid pb-3">
        @RenderBody()
    </main>

    <footer class="container-fluid py-0 pt-1 fixed-bottom">
        @await Html.PartialAsync("FooterPartial")
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>