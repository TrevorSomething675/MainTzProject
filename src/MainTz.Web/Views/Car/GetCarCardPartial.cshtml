@using MainTz.Web.ViewModels.CarViewModels
@model CarCardViewModel

<div class="car-card">
    <div class="p-1 container">
        <div>
           <a asp-controller="Car" asp-action="GetBigCarCard" asp-route-id="@Model.CarResponse.Id">
                <img src="data:image/png;base64, @Model.ImageResponse.FileBase64String" class="product-img"/>
           </a>
        </div>
        <div class="car-card-header-text">
            <h2>@Model.CarResponse.Name</h2>
        </div>
        <div class="car-card-description-text text-break">
            @Model.CarResponse.Description
        </div>
         <div class="row">
            <div class="d-flex col">
                <div class="car-card-price mx-1">
                    <div class="px-1">
                        @Model.CarResponse.Price
                    </div>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex justify-content-end col">
                    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        if (Model.CarResponse.IsVisible)
                        {
                            <div class="car-card-cart-offer-active mx-1">
                                <i class="bi bi-eye px-1"></i>
                            </div>
                        }
                        else
                        {
                            <div class="car-card-cart-offer-unactive mx-1">
                                <i class="bi bi-eye-slash px-1"></i>
                            </div>
                        }
                    }
                    <div class="car-card-cart-offer mx-1">
                          <a>
                              <i class="bi bi-bag"></i>
                          </a>
                    </div>
                    <div class="car-card-favorite-offer mx-1">
                        <button id="ChangeCarInFavorite_@Model.CarResponse.Id" onclick="ChangeCarInFavorite(@Model.CarResponse.Id)" class="car-favorite-offer-btn">
                            <i class="bi bi-star"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>